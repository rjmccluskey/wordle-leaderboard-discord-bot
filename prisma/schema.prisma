// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AllTimeScore {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  totalPlayed        Int
  totalWins          Int
  totalTies          Int
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@unique([discordChannelId, discordUserId])
}

model ChannelLeaderboard {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId String         @unique
  enabled          Boolean        @default(true)
  lastGameNumber   Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  monthlyScores    MonthlyScore[]
  allTimeScores    AllTimeScore[]
  wordleResults    WordleResult[]
  dailyWinners     DailyWinner[]
}

model DailyWinner {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  gameNumber         Int
  score              Int
  createdAt          DateTime           @default(now())

  @@unique([discordChannelId, gameNumber])
}

model MonthlyScore {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  month              String
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  totalPlayed        Int
  totalWins          Int
  totalTies          Int
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@unique([discordChannelId, discordUserId, month])
}

model WordleResult {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  gameNumber         Int
  score              Int?
  raw                String
  createdAt          DateTime           @default(now())

  @@unique([discordChannelId, discordUserId, gameNumber])
}
