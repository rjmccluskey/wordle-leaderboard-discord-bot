generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ChannelLeaderboard {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId String         @unique
  enabled          Boolean        @default(true)
  lastGameNumber   Int?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  monthlyScores    MonthlyScore[]
  allTimeScores    AllTimeScore[]
  wordleResults    WordleResult[]
}

model AllTimeScore {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  totalPlayed        Int
  totalWins          Int
  totalTies          Int
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model MonthlyScore {
  id                   String             @id @default(auto()) @map("_id") @db.ObjectId
  month                String
  discordChannelId     String
  channelLeaderboard   ChannelLeaderboard @relation(fields: [channelLeaderboardId], references: [id])
  channelLeaderboardId String             @db.ObjectId
  discordUser          DiscordUser
  totalPlayed          Int
  totalWins            Int
  totalTies            Int
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}

model WordleResult {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  discordChannelId   String
  channelLeaderboard ChannelLeaderboard @relation(fields: [discordChannelId], references: [discordChannelId])
  discordUserId      String
  discordUsername    String
  gameNumber         Int
  score              Int?
  raw                String
  createdAt          DateTime           @default(now())

  @@unique([discordChannelId, discordUserId, gameNumber])
}

type DiscordUser {
  userId   String
  username String
  avatar   String?
}
